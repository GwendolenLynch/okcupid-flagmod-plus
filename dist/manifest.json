{
    "manifest_version": 2,
    "name": "OkCupid Flagmod Plus",
    "short_name": "Flagmod Plus",
    "description": "Extension to enhance OkCupid Flagmod functionality",
    "version": "1.3.1",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "OkCupid Flagmod Plus"
    },
    "options_ui": {
        "page": "html/options.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "webRequest",
        "https://www.okcupid.com/"
    ],
    "content_scripts": [
        {
            "js": [
                "app/flagmod-plus.js"
            ],
            "css": [
                "app/flagmod-plus.css"
            ],
            "matches": [
                "https://www.okcupid.com/flagmod"
            ]
        },        {
            "js": [
                "app/profile-page.js"
            ],
            "matches": [
                "https://www.okcupid.com/profile/*"
            ]
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
    "web_accessible_resources": [
        "app/page-script.js",
        "app/photo-review.js",
        "app/photo-review.css",
        "html/form/flagmod-vote-buttons.html",
        "images/logo-*.svg"
    ],
    "background": {
        "scripts": [
            "app/background.js"
        ]
    }
}
